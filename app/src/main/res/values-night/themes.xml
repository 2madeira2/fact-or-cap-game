<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FactOrCapGame" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/c7</item>
        <item name="colorPrimaryVariant">@color/c1</item>
        <item name="colorOnPrimary">@color/c7</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/c1</item>
        <item name="colorSecondaryVariant">@color/c2</item>
        <item name="colorOnSecondary">@color/offline_indicator_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/c9</item>

        <!-- Font. -->
        <item name="textAppearanceHeadline2">@color/c6</item>

        <!-- Gradients. -->
        <item name="textAppearanceSubtitle1">@color/c7</item>
        <item name="textAppearanceSubtitle2">@color/c7</item>

        <!-- Gradients EditText. -->
        <item name="textAppearanceSearchResultTitle">@color/c4</item>
        <item name="textAppearanceSearchResultSubtitle">@color/c4</item>

        <!-- Buttons. -->
        <item name="textAppearanceHeadline3">@color/c8</item>
        <item name="textAppearanceHeadline4">@color/c9</item>
        <item name="textAppearanceHeadline5">@color/c7</item>
        <item name="textAppearanceHeadline6">@color/c7</item>

        <!-- Ripple colors. -->
        <item name="textAppearanceBody1">@color/ripple_color_light</item>
        <item name="textAppearanceBody2">@color/ripple_color_item</item>
        <item name="textAppearanceCaption">@color/ripple_color</item>

        <!-- Wallpapers. -->
        <item name="android:windowBackground">@color/c5</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>

    </style>
    <style name="Button.Main" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/c7</item>
    </style>
    <style name="Button.Variant" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/c7</item>
        <item name="colorOnPrimary">@color/c9</item>
    </style>


    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/c9</item>
        <item name="colorSecondary">@color/c1</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.ButtonPositiveDark</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.ButtonNegativeDark</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorPrimary">@color/c6</item>
        <item name="colorOnPrimary">@color/font_color</item>
        <item name="colorOnSurface">?attr/colorControlNormal</item>

    </style>


</resources>
