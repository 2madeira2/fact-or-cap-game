<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_wallpaper"
        android:padding="32dp">

    <TextView
            android:id="@+id/tv_game_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You win!"
            android:textSize="50sp"
            android:fontFamily="@font/norwester"
            android:textColor="@color/font_color"
            android:layout_marginTop="50dp"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
            android:id="@+id/tv_score_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="35 points"
            android:textSize="40sp"
            android:fontFamily="@font/norwester"
            android:textColor="@color/font_color"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toBottomOf="@+id/tv_game_result"
            app:layout_constraintEnd_toEndOf="@+id/tv_game_result"
            app:layout_constraintStart_toStartOf="@+id/tv_game_result">

    </TextView>

    <LinearLayout
            android:id="@+id/winner_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_score_points"
            app:layout_constraintBottom_toTopOf="@id/members_rv"
            app:layout_constraintVertical_chainStyle="packed">

        <ImageView
                android:id="@+id/winner_portrait"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/font_color"
                android:src="@drawable/ic_person"
                android:contentDescription="@string/profile_picture_placeholder"
                android:scaleType="fitCenter" />


        <TextView
                android:id="@+id/winner_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User1"
                android:layout_weight="1"
                android:textSize="25sp"
                android:fontFamily="@font/norwester"
                android:textColor="@color/font_color"
                android:layout_gravity="center_horizontal"
                android:maxLines="1" />

        <TextView
                android:id="@+id/winner_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35 points"
                android:layout_weight="1"
                android:textSize="14sp"
                android:fontFamily="@font/norwester"
                android:textColor="@color/offline_indicator_color"
                android:layout_gravity="center_horizontal"
                android:maxLines="1"
                android:layout_marginTop="5dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/members_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:listitem="@layout/game_finished_member"
            tools:itemCount="3"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/restart_button"
            app:layout_constraintTop_toBottomOf="@+id/winner_layout" />


    <Button
            android:id="@+id/menu_button"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:cornerRadius="80dp"
            android:textAllCaps="false"
            android:letterSpacing="0"
            android:padding="13dp"
            android:layout_marginBottom="24dp"
            android:text="@string/menu"
            android:textSize="35sp"
            android:textColor="@color/font_color"
            android:fontFamily="@font/norwester"
            android:src="@drawable/green_round_background"
            android:theme="@style/Button.Main"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

    </Button>

    <Button
            android:id="@+id/restart_button"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:cornerRadius="80dp"
            android:textAllCaps="false"
            android:letterSpacing="0"
            android:padding="13dp"
            android:layout_marginBottom="10dp"
            android:text="@string/play_again"
            android:textSize="35sp"
            android:textColor="@color/font_color"
            android:fontFamily="@font/norwester"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            android:src="@drawable/green_round_background"
            android:theme="@style/Button.Main"
            app:layout_constraintBottom_toTopOf="@id/menu_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>