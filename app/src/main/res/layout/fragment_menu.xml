<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.menu.MenuFragment"
        android:background="@drawable/ic_wallpaper">
    <TextView
            android:id="@+id/username_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintRight_toLeftOf="@id/profile_picture_image"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/username_menu_string"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="@font/norwester" />

    <ImageView
            android:id="@+id/profile_picture_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHeight="50dp"
            app:layout_constraintWidth="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_person"
            android:contentDescription="@string/profile_picture_placeholder"
            android:scaleType="center"/>

    <TextView
            android:id="@+id/change_username_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/profile_picture_image"
            app:layout_constraintRight_toRightOf="@id/profile_picture_image"
            android:text="@string/change_username_menu_String"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/norwester"/>

    <TextView
            android:id="@+id/game_logo_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintWidth="wrap_content"
            app:layout_constraintHeight="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="60sp"
            app:layout_constraintVertical_bias="0.35"
            android:textColor="@color/black"
            android:text="@string/game_name"
            android:fontFamily="@font/norwester" />

    <ImageButton
            android:id="@+id/single_game_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background = "@drawable/roundedbutton"
            android:backgroundTint="@color/primarygreen"
            android:src="@drawable/ic_play"
            android:scaleType="center"
            android:contentDescription="@string/single_play_placeholder" />

    <ImageButton
            android:id="@+id/multiplayer_game_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background = "@drawable/roundedbutton"
            android:backgroundTint="@color/primarygreen"
            android:src="@drawable/ic_group"
            android:scaleType="center"
            android:contentDescription="@string/multiplayer_play_placeholder" />

    <ImageButton
            android:visibility="invisible"
            android:id="@+id/create_room_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintVertical_bias="0.52"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background = "@drawable/roundedbutton"
            android:backgroundTint="@color/primarygreen"
            android:src="@drawable/ic_create"
            android:scaleType="center"
            android:contentDescription="@string/create_room_placeholder" />

    <ImageButton
            android:visibility="invisible"
            android:id="@+id/join_room_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintVertical_bias="0.67"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background = "@drawable/roundedbutton"
            android:backgroundTint="@color/primarygreen"
            android:src="@drawable/ic_join"
            android:scaleType="center"
            android:contentDescription="@string/join_room_placeholder" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/status_buttons_layout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintVertical_bias="0.72"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/roundedbutton">
        <ImageButton
                android:id="@+id/stat_button"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="@id/leaderboard_button"
                android:src="@drawable/ic_stat"
                android:scaleType="center"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/statistic_placeholder"/>
        <ImageButton
                android:id="@+id/leaderboard_button"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_cup"
                android:scaleType="center"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/leaderboard_placeholder"/>
        <ImageButton
                android:id="@+id/change_language_button"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/leaderboard_button"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_globe"
                android:scaleType="center"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/change_language_placeholder"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
