<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.menu.MenuFragment"
        android:padding="32dp">
    <TextView
            android:id="@+id/create_username_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0.30"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/create_username_string"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            android:textSize="40sp"
            android:textColor="?attr/textAppearanceHeadline2"
            android:fontFamily="@font/norwester"
            android:textAlignment="center"/>

    <EditText
            android:id="@+id/create_username_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/type_here_string"
            android:inputType="text"
            android:autofillHints="name"
            android:maxLines="1"
            android:textSize="25sp"
            android:textColor="?attr/textAppearanceHeadline2"
            app:layout_constraintStart_toStartOf="@+id/create_username_textview"
            app:layout_constraintEnd_toStartOf="@+id/confirm_username_button"
            app:layout_constraintBottom_toBottomOf="@+id/confirm_username_button"
            app:layout_constraintTop_toTopOf="@+id/confirm_username_button" />

    <ImageButton
            android:id="@+id/confirm_username_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            android:maxLines="1"
            android:layout_marginTop="30dp"
            android:background="@drawable/green_round_background"
            android:src="@drawable/ic_next"
            app:layout_constraintTop_toBottomOf="@+id/create_username_textview"
            app:layout_constraintEnd_toEndOf="@+id/create_username_textview" />

    <TextView
            android:id="@+id/create_username_hint_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/create_username_edittext"
            app:layout_constraintEnd_toEndOf="@id/confirm_username_button"
            android:text="@string/create_username_hint_string"
            android:textSize="20sp"
            android:textColor="?attr/textAppearanceHeadline2"
            android:fontFamily="@font/norwester"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/create_username_edittext" />
</androidx.constraintlayout.widget.ConstraintLayout>
