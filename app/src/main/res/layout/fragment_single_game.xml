<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        android:padding="32dp">

    <TextView
            android:id="@+id/tv_fact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The sharks are dangerous birds"
            android:textSize="40sp"
            android:fontFamily="@font/norwester"
            android:textAlignment="center"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/score_container">

    </TextView>

    <FrameLayout
            android:id="@+id/score_container"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center">

        <ImageView
                android:id="@+id/iv_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/score_background">

        </ImageView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:fontFamily="@font/norwester"
                android:singleLine="true"
                android:textSize="40sp"
                android:layout_gravity="center">

        </TextView>

    </FrameLayout>

    <ImageButton
            android:id="@+id/agree_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_agree_background"
            android:src="@drawable/round_check_24"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

    </ImageButton>

    <ImageButton
            android:id="@+id/disagree_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_disagree_background"
            android:src="@drawable/round_close_24"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

    </ImageButton>


</androidx.constraintlayout.widget.ConstraintLayout>
