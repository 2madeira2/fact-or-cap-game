<?xml version="1.0" encoding="utf-8"?>


<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="?attr/textAppearanceBody1">

    <item android:id="@android:id/mask">

        <shape android:shape="rectangle">
            <solid android:color="?attr/textAppearanceBody2" />
        </shape>

    </item>

    <item android:id="@android:id/background">

        <shape android:shape="rectangle">
            <gradient
                    android:angle="180"
                    android:startColor="?attr/textAppearanceSubtitle1"
                    android:endColor="?attr/textAppearanceSubtitle2" />

        </shape>

    </item>

</ripple>