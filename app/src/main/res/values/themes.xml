<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FactOrCapGame" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/secondary_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_green</item>
        <item name="colorSecondaryVariant">@color/online_indicator_color</item>
        <item name="colorOnSecondary">@color/offline_indicator_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/primary_red</item>

        <!-- Font. -->
        <item name="textAppearanceHeadline2">@color/font_color</item>

        <!-- Gradients. -->
        <item name="textAppearanceSubtitle1">@color/green_gradient_start</item>
        <item name="textAppearanceSubtitle2">@color/green_gradient_end</item>

        <!-- Gradients EditText. -->
        <item name="textAppearanceSearchResultTitle">@color/edit_gradient_start</item>
        <item name="textAppearanceSearchResultSubtitle">@color/edit_gradient_end</item>

        <!-- Buttons. -->
        <item name="textAppearanceHeadline3">@color/font_color</item>
        <item name="textAppearanceHeadline4">@color/font_color</item>
        <item name="textAppearanceHeadline5">@color/primary_green</item>
        <item name="textAppearanceHeadline6">@color/primary_red</item>

        <!-- Ripple colors. -->
        <item name="textAppearanceBody1">@color/ripple_color_light</item>
        <item name="textAppearanceBody2">@color/ripple_color_item</item>
        <item name="textAppearanceCaption">@color/ripple_color</item>

        <!-- Wallpapers. -->
        <item name="android:windowBackground">@drawable/ic_wallpaper</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>

    </style>
    <style name="Button.Main" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/primary_green</item>
    </style>
    <style name="Button.Variant" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/primary_red</item>
    </style>


    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/secondary_green</item>
        <item name="colorSecondary">@color/secondary_green</item>
        <item name="colorOnSurface">@color/font_color</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.ButtonPositive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.ButtonNegative</item>
    </style>
    
    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorPrimary">@color/offline_indicator_color</item>
        <item name="colorOnSurface">@color/font_color</item>
    </style>


</resources>
